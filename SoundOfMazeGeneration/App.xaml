<Application x:Class="SoundOfMazeGeneration.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SoundOfMazeGeneration"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <system:Double x:Key="CellSize">40</system:Double>
        <system:Int16 x:Key="Rows">15</system:Int16>
        <system:Int16 x:Key="Cols">20</system:Int16>
        <system:Double x:Key="BorderThickness">1.5</system:Double>
        <local:CellStateToColor x:Key="CellStateToColor"/>
        <local:WallsStateToBorderThicknessConverter x:Key="WallsStateToBorderThicknessConverter"/>
        <local:SizeToCanvasSizeConverter x:Key="SizeToCanvasSizeConverter"/>
        <local:PositionToCanvasPositionConverter x:Key="PositionToCanvasPositionConverter"/>
    </Application.Resources>
</Application>
