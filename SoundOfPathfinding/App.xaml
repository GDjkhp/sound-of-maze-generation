<Application x:Class="SoundOfPathfinding.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SoundOfPathfinding"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <system:Double x:Key="CellSize">12</system:Double>
        <system:Int16 x:Key="Rows">30</system:Int16>
        <system:Int16 x:Key="Cols">40</system:Int16>
        <local:CellStateToColor x:Key="CellStateToColor"/>
        <local:CellToSpriteRect x:Key="CellToSpriteRect"/>

        <BitmapImage x:Key="GridSprite" UriSource="./Resources/GridSprite.png" />

    </Application.Resources>
</Application>
